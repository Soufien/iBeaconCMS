%h1 Listing items
%table.table.table-striped
  %thead
    %tr
      %th Spec
      %th Name
      %th Description
      %th Timeframe
      %th Beacon
      %th Template_id
      %th
      %th
      %th
  %tbody
    - @items.each do |item|
      %tr
        %td= item.spec
        %td= item.name
        - if item.name == 'Template1'
          %td= item.template_photo.description
        - elsif item.name == 'Template2'
          %td= item.template.description_1
        - else
          %td= "No Description"
        %td= item.show_after_seconds
        %td= item.beacon.major.to_s + ' - ' + item.beacon.minor.to_s
        %td= item.beacon.app.id.to_s
        -#%td= items.template_id
        -#%td= link_to 'Show', item
        %td= button_to('Edit', edit_item_path(item), :class => 'btn btn-large btn-primary')
        %td= button_to('Destroy',item, :class => 'btn btn-medium btn-primary', method: :delete, data: { confirm: 'Are you sure?' })
%br/
= button_to('New Page', new_item_path, :class => 'btn btn-large btn-primary')
