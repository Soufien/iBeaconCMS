= simple_form(@beacon) do |f|
  - if @beacon.errors.any?
    #error_explanation
      %h2
        = pluralize(@beacon.errors.count, "error")
        prohibited this beacon from being saved:
      %ul
        - @beacon.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.input :uuid
  .field
    = f.input :major
  .field
    = f.input :minor
  .actions
    = f.button :submit